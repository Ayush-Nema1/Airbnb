<% layout("/layouts/boilerplate")%>

<body>
    <h1>All listing</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
  <% for(let l of alllist) { %>
       <a href="/listings/<%=l._id%>" class="l-link">
    <div class="card col" >
  <img src="<%= l.image.url %>" class="card-img-top" alt="..." style = "height: 20rem;">
    <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text"> 
    <b>  <%= l.title %> </b> <br>
      &#8377;<%= l.price.toLocaleString("en-IN")%>/night
    </p>
  </div>
  </div>
  </a>
    <%}%>
    </div>
   
 

    
</body>
</html>